# Database configuration
# For external database (Supabase, Neon, DigitalOcean, etc)
DATABASE_URL=postgresql://user:password@host:port/database?schema=public

# For local development with Docker
# DATABASE_URL=postgresql://postgres:password@localhost:5432/chase

# Security
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters
SUPER_ADMIN_KEY=your-master-admin-key
ADMIN_IPS=192.168.1.1,10.0.0.1

# Environment
NODE_ENV=production

# Port (backend)
PORT=3001

# Domain
DOMAIN=chasepay.pro

# SSL Certificate paths (relative to project root)
SSL_CERT_PATH=./ssl/certificate.crt
SSL_KEY_PATH=./ssl/certificate.key
SSL_CA_PATH=./ssl/certificate_ca.crt